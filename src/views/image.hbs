<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Agregar Notas</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Expandir
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Nombres">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="email" placeholder="Correo">
                </div>
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="escribir Nota Aquí"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Agregar Notas
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="row">
                    <a href="#" class="col text-center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago timestamp}}
                        </footer>
                    </blockquote>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
