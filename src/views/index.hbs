<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i> Subir contacto
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon"
                            required>
                        <label class="custom-file-label" for="inputGroupFile">Elegir Foto</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="nombres" class="form-control" placeholder="Nombres" required>
            </div>
            <div class="form-group">
                <input type="text" name="apellidos" class="form-control" placeholder="Apellidos" required>
            </div>
            <div class="form-group">
                <input type="email" name="correo" class="form-control" placeholder="Correo" required>
            </div>
            <div class="form-group">
                <input type="date" name="fecha_nac" class="form-control" placeholder="Fecha de Nacimiento" required>
            </div>
            {{!-- <div class="form-group">
                <textarea name="description" rows="2" class="form-control" placeholder="Description for the image"
                    required></textarea>
            </div> --}}
            <div class="form-group">
                <button class="btn btn-success">
                    <i class="fa fa-upload"></i> Guardar Contacto
                </button>
            </div>
        </form>
    </div>
</div>

<!--Sección de imágenes-->
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Contactos Recientes</h3>
    </div>
    <div class="card-body">        
            <div class="row">
                {{#each images}}
                <div class="col-md-4">
                    <a href="/images/{{uniqueId}}">
                        <img src="/public/upload/{{foto}}" alt="" class="w-100 h-100 img-thumbnail">
                    </a>
                </div>

                {{/each}}
            </div>    
    </div>
</div>